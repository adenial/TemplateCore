@model IEnumerable<AdminRoleIndexViewModel>

@{
  ViewData["Title"] = "Roles";
}

<h2>Roles</h2>

<div class="col-sm-12">
  <table id="table"
         data-smart-display="true"
         data-mobile-responsive="true"
         data-search="true"
         data-show-toggle="true"
         data-show-columns="true"
         data-show-export="true"
         data-minimum-count-columns="2"
         data-pagination="true"
         data-id-field="id"
         data-page-list="[10, 25, 50, 100, ALL]"
         data-toggle="table"
         data-striped="true">
    <thead>
      <tr>
        <th data-field="name" data-sortable="true" data-halign="center">
          @Html.DisplayNameFor(model => model.Name)
        </th>
        <th data-halign="center" data-align="center">Acciones</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.Name)
          </td>
          <td>
            <a class="btn btn-circle btn-icon-only red" title="Eliminar" href='@Url.Action("Delete", "User", new { name = item.Name })'>
              <i class="fa fa-trash"></i>
            </a>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>
