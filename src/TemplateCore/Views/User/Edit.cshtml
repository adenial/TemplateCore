            <tr>
              <th data-field="Check" data-sortable="true" data-halign="center">
                @Localizer["Check"]
              </th>
              <th data-field="name" data-sortable="true" data-halign="center">
                @Localizer["Name"]
              </th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            @Html.EditorFor(x => Model.Roles)
          </tbody>
        </table>
      </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
